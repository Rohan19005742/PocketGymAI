// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]

  // Fitness profile
  fitnessLevel  String    @default("Beginner")
  goal          String    @default("Build Muscle")
  age           Int?
  weight        Float?
  height        Float?
  trainingExperience String? // "beginner", "intermediate", "advanced"
  
  // Onboarding
  onboardingComplete Boolean @default(false)
  preferredTrainingDays Int? // 3-6 days per week
  exercisePreferences String? // JSON: ["strength", "cardio", "flexibility"]
  dietaryPreferences String? // JSON: ["vegan", "keto", "balanced"]
  availableEquipment String? // "home", "gym", "both"
  
  // Tracking
  completedWorkouts Int   @default(0)
  streakDays    Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Password reset
  resetToken    String?   @unique
  resetTokenExpiry DateTime?
  
  // Progress tracking
  workoutProgress WorkoutProgress[] @relation("WorkoutProgress")
  weightProgress  WeightProgress[] @relation("WeightProgress")
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WorkoutProgress {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation("WorkoutProgress", fields: [userId], references: [id], onDelete: Cascade)
  
  workoutName       String
  date              DateTime @default(now())
  duration          Int      // in minutes
  calories          Int?
  notes             String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model WeightProgress {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation("WeightProgress", fields: [userId], references: [id], onDelete: Cascade)
  
  weight            Float
  date              DateTime @default(now())
  notes             String?
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  
  @@index([userId, date])
}
